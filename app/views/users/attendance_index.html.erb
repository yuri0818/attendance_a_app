
<% provide(:title, 'Attendance Users') %>
<h1 class="index-title">List of employees at work</h1>

<table class="txt1 table table-bordered table-striped table-condensed table-status">
  <thead>
    <tr>
      <th class="table-header">社員番号</th>
      <th class="table-header">名前</th>
    </tr>
  </thead>
  <tbody>
       <tr> 
　       <% @users.each do |user| %>
　        <% user.attendances.each do |attendance| %>
            <% if (Date.current == attendance.worked_on) && attendance.finished_at.nil? %>  
               <td class="table-body">
                 <%= @user.employee_number %>
               </td>
                
                <td class="table-body">
                 <%= @user.name %>
                </td>
        </tr>
          <% end %>
           <% end %>
            <% end %>
  </tbody>
</table>