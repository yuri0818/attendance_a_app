 
  <%= form_with(model: user,url: update_basic_info_user_path(user.id), local: true, method: :patch) do |f| %>
 
  <%= f.label :name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :affiliation, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :affiliation, class: "form-control" %>

　<%= f.label :employee_number, "社員番号"%> 
　<%= f.number_field :employee_number, class: 'form-control' %>

  <%= f.label :uid, "カードID"%>
  <%= f.text_field :uid, class: 'form-control' %>

　<%= f.label :basic_work_time, "基本勤務時間" %>
  <%= f.time_field :basic_work_time, class: 'form-control' %>

  <%= f.label :designation_started_at, "指定勤務開始時間" %>
  <%= f.time_field :designation_started_at, class: 'form-control' %>

  <%= f.label :designation_finished_at, "指定勤務終了時間" %>
　<%= f.time_field :designation_finished_at, class: 'form-control' %>

  <%= @user %>

  <%= f.label :password, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= @user %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
  <% end %>