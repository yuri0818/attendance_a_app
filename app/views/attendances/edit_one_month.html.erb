<% provide(:title, @user.name) %>
<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
  <div>
    <h1>Attendance edit screen</h1>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出勤時間</th>
          <th>退勤時間</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>指示者確認印</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
          <% 
            css_class = 
            case $days_of_the_week[day.worked_on.wday]
            when '土' then
              'text-primary'
            when '日' then
              'text-danger'
            end
          %>
          <tr>
            <td><%= l(day.worked_on, format: :short) %></td>
            <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
            <% if (Date.current < day.worked_on)  %>
              <td><%= attendance.time_field :change_started_at, readonly: true, class: "form-control" %></td>
              <td><%= attendance.time_field :change_finished_at, readonly: true, class: "form-control" %></td>
            <% else %>
              <td><%= attendance.time_field :change_started_at, class: "form-control" %></td>
              <td><%= attendance.time_field :change_finished_at, class: "form-control" %></td>
            <% end %>
            <td><%= attendance.check_box :change_tomorrow, id: "remember_me" %></td>
            
            <td>
             <% if day.change_started_at.present? && day.change_finished_at.present? %>
                <%= working_times(day.change_started_at, day.change_finished_at, day.change_tomorrow) %>
             <% end %>
            </td>
             <% if (Date.current < day.worked_on) %>
           　 <td><%= attendance.text_field :note,readonly: true, class: "form-control" %></td>
           　 <% else %>
             <td><%= attendance.text_field :note, class: "form-control" %></td>
             <% end %>
             <!--誰宛てか？-->                     <!--承認者カラム？-->   
             <td><%= attendance.collection_select :edit_authorizer, @superior, :name, :name, {include_blank: true} %></td>
                      
          </tr>
        <% end %>
      <% end %>
  
      </tbody>
    </table>
  </div>

  <div class="center">
    <%= f.submit "UPDATE", class: "btn btn-lg btn-primary" %>
    <%= link_to "CANSEL", user_path(date: @first_day), class: "btn btn-lg btn-default" %>
  </div>
<% end %>