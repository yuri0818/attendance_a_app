<% provide(:class_text, 'overtime_log') %>
<% provide(:button_text, 'update') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
     
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
     
      <h1 class="modal-title">&#x1F380;	  Overtime log   &#x1F380;</h1>
      <h1 class= "user-name" ><%= @user.name %></h1>
    </div>
    
    <div class="modal-body">
      <div class="row">
        <div class="col-md-11 col-md-offset-1">
          

     <%= form_with(model: @attendance, url: attendances_overtime_log_update_user_path(@user), local: true, method: :patch) do |f| %>
     <%= render 'shared/error_messages', object: @attendance %>

       <table class="table table-bordered table-condensed table-hover" id="table-attendances">
 
       
           <th>日付</th>
           <th>変更前出社時間</th>
      　    <th>変更前退社時間</th>
      　    <th>変更後出社時間</th>
           <th>変更後出社時間</th>
           <th>指示者</th>
           <th>承認者</th>
     
          <tr>
          
           <td><%= l(@attendance.worked_on, format: :short) %></td>
          
           <td><%= f.time_field:before_started_at , class: "form-control"%></td>
       
           <td><%= f.time_field:before_finished_at , class: "form-control" %></td>
           
           <td><%= f.time_field:change_started_at , class: "form-control"%></td>
           
           <td><%= f.time_field:change_finished_at , class: "form-control"%></td>
           
         　<td><%= f.text_field :authorizer, class: "form-control"%></td>
         
      　    <td><%= f.text_field :instructor , class: "form-control"%></td>
        
         </tr>
       </table>
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
              CANCEL
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>